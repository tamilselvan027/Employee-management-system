@model Employee_Management_System.Models.Leave

@{
    ViewBag.Title = "LeavePage";
    Layout = "~/Views/Shared/UserLayout.cshtml";

    if(TempData["AlertMessage"] != null)
            {
                <script>
                    alert("@TempData["AlertMessage"]");
                </script>
            }
}
<link href="~/Content/CSS/LeavePage.css" rel="stylesheet" />

<div class="leave">
    <h2>Leave Application</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        @*<div class="form-group">
            <label for="employee-id">Employee ID</label>
            <input type="number" id="employee-id" name="EmployeeId">
        </div>*@

        <div class="form-group dropdown">
            <h4> Leave Details </h4>
            <label for="leave-type">Type of Leave:</label>
            <select id="leave-type" name="LeaveType">
                <option value="" disabled>Select Leave Type</option>
                <option value="Sick Leave">Sick Leave</option>
                <option value="Vacation Leave">Vacation Leave</option>
                <option value="Casual Leave">Casual Leave</option>
                <option value="Optional Leave">Optional Leave</option>
            </select>
        </div>

        <div class="form-group">
            <label for="start-date">Start Date:</label>
            <input type="date" id="start-date" name="StartDate">
        </div>

        <div class="form-group">
            <label for="end-date">End Date:</label>
            <input type="date" id="end-date" name="EndDate">
        </div>

        <div class="form-group">
            <label for="days-count">How many days</label>
            <input type="number" id="days-count" name="LeaveCount">
        </div>

        <div class="form-group">
            <label for="reason">Reason for Leave:</label>
            <textarea id="reason" name="Reason" rows="4"></textarea>
        </div>

        <div class="form-group">
            <input type="submit" value="Submit">
        </div>
    }
</div>

