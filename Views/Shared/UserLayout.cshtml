<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/CSS/UserLayout.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navigationbar">
            <a href="" class="logo"> 
                <img src="~/Content/Images/claysys-logo.png" alt="Claysys Logo"/>
            </a>
            <ul class="navlist">
                @*<li><a href="#">Home</a></li>*@
                <li>@Html.ActionLink("Home", "GetEmployeeProfile", "EmployeeDetails")</li>
                <li>@Html.ActionLink("Departments", "GetDepartments", "Departments")</li>
                <li>@Html.ActionLink("Apply leave", "GetLeaveStatus", "Leave")</li>
                @*<li>@Html.ActionLink("About us", "About", "Contact")</li>
                <li>@Html.ActionLink("Contact us", "Contact", "Contact")</li>*@
                <li>@Html.ActionLink("Logout", "Index", "Home")</li>
            </ul>
        </nav>
    </header>

<div class="container body-content">    
    @RenderBody()
    <hr />
    <footer>
        <div class="footer-container">
            <div class="footer-content">
                <h3>Contact us</h3>
                <p>Email : Info@gmail.com </p>
                <p>Phone : +123-4567-890</p>
                <p>Address : 39&40 Second Floor, E Lokamanya St, R.S. Puram, Coimbatore, Tamil Nadu 641002</p>
            </div>
            <div class="footer-content">
                <h3>
                    Quick Links
                </h3>
                <ul class="footer-list">
                    <li>@Html.ActionLink("Home", "GetEmployeeProfile", "EmployeeDetails")</li>
                    <li>@Html.ActionLink("Departments", "GetDepartments", "Departments")</li>
                    <li>@Html.ActionLink("Apply leave", "GetLeaveStatus", "Leave")</li>
                </ul>
            </div>
            <div class="footer-content temp">
                <h3>Follow us</h3>
                <ul class="social-icons">
                    <li><a href="#">
                            <i class="fa-brands fa-facebook"></i>
                        </a></li>
                    <li><a href="#">
                            <i class="fa-brands fa-twitter"></i>
                        </a></li>
                    <li><a href="#">
                            <i class="fa-brands fa-instagram"></i>
                        </a></li>
                    <li><a href="#">
                            <i class="fa-brands fa-linkedin"></i>
                        </a></li>
                </ul>
            </div>
        </div>
        <div class="bottom-bar">
            <p>&copy; 2024:Claysys. All rights reserved</p>
        </div>
    </footer>
</div>
</body>
</html>
